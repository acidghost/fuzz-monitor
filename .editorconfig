root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[Makefile]
indent_style = tab
indent_size = 4

[*.c, *.h, *.rs]
indent_style = space
indent_size = 4

[*.md]
# Preserve trailing whitespace for Markdown files
trim_trailing_whitespace = false
